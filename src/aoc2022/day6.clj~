(ns aoc2022.day5
  (:require [aoc2022.utils :refer [read-input-as-string]]
            [clojure.string :as str]))

(defn solution1
  [file]
  (->> file
       read-input-as-string
       (filterv #(Character/isLetter %))
       (map-indexed vector)
       (partition 4 1)
       (into [])))

(defn -main
  []
  (printf "Solution 1: %s\n", (solution1 "day6-test.txt")))

(comment
  (filterv #(Character/isLetter %) (read-input-as-string "day6-test.txt"))
  ,)
